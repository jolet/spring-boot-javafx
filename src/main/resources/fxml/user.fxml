<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Pane xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.kingict.java.controller.UserController">
   <Label layoutX="144.0" layoutY="95.0" text="User List" />
   <VBox layoutX="25" layoutY="144" minWidth="400" spacing="10">
      <children>
         <GridPane fx:id="userGridPane" minWidth="400" hgap="15" vgap="10" >
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="130" halignment="RIGHT"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="220" halignment="LEFT"/>
         </columnConstraints>
         </GridPane>
         <HBox spacing="10">
            <children>
               <TextField fx:id="nameTextField" prefWidth="130"/>
               <TextField fx:id="meritTextField" prefWidth="135"/>
               <Button text="Save user" onAction="#saveUser"/>
            </children>
         </HBox>
         <Button onAction="#navigateBack" text="Back" />
      </children>
   </VBox>
</Pane>